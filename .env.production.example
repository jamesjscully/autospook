# Production Environment Variables
# Copy this file to .env.production and configure with your actual values

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=your_production_openai_api_key_here

# Anthropic API Key (REQUIRED)  
ANTHROPIC_API_KEY=your_production_anthropic_api_key_here

# Exa Search API Key (REQUIRED)
EXA_API_KEY=your_production_exa_api_key_here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security (REQUIRED - Generate a strong random secret key)
SECRET_KEY=your_strong_random_secret_key_here

# Google Cloud Configuration
PROJECT_ID=your-google-cloud-project-id
REGION=us-central1

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=True

# Optional: Logging Level
LOG_LEVEL=INFO